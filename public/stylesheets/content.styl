@import "variables.styl"

/* Content styles */
#background
  overflow hidden
  relative false
  width 100%
  height 100%
  background-image url('../images/background.svg')
  background-position 50% 0
  background-size 60px 60px
  background-repeat repeat
  padding-right 1px

#glow
  fixed 0
  z-index 0
  overflow hidden
  opacity 0
  transition opacity 1s linear
  &.show
    opacity 1
  .glow-container
    absolute 50% false false 50%
    transform translate(-50%, -50%)
    size 100%
    size 100vmax
    
.container
  @media only screen and (min-width: 900px)
    width 841px
  relative false
  width auto
  // min-width 360px
  // min-height 736px
  margin auto
  // padding 0 90px 0 89px
  box-sizing border-box
  transition width 0.3s linear,
             padding-left 0.3s linear,
             padding-right 0.3s linear
  .navigation
    absolute 0 0 false

html {
  height: 100%;
}
body {
  min-height: 100%;
  display: flex;
  flex-direction: column;
}

.footer {
  padding: 20px;
}

#sidebar
  opacity 0
  max-height 0
  transition opacity $content-show-transition-time linear,
             max-height 0s linear $content-show-transition-time,
             overflow 0s linear $content-show-transition-time
  &.show
    z-index 2
    opacity 1
    max-height 10000px
    transition opacity $content-show-transition-time linear,
               max-height 0s linear,
               overflow 0s linear
.label 
  text-transform uppercase
  text-decoration none
  letter-spacing: 2.5px;
  font-weight: 500;
  &.general
    color rgba(255,255,255,0.3)
    font-weight 600
  &.numbers
    color rgb(255, 255, 255)
    font-weight 400
    letter-spacing 3px
    @media only screen and (min-width: 901px)
      font-size 36px
      line-height 65px
  &.link
    color rgba(23,230,178,0.6)
    font-weight 700
    letter-spacing 3.5px
    -webkit-transition color .2s linear
    transition color .2s linear
    &:hover
      color #17e5b2
  &.info
    color rgb(25, 253, 197)
  &.code
    color #fff
    font-weight 400
    letter-spacing 2px
    text-transform none
    white-space: pre-wrap;
    word-wrap: break-word;
    @media only screen and (min-width: 901px)
      font-size 22px
      line-height 69px
  &.head
    color $white
    font-weight 600
    letter-spacing 4px
       
+media-query(only screen, max-width $mobileWidth)
  #background
    background-image none
    min-height 100%
  .container
    min-height 100%
    width 100%
    padding 0
    
+media-query(only screen, min-width $mobileWidth, max-width $tabletWidth)
  .container
    width 301px
+media-query(only screen, min-width $tabletWidth, max-width $bigWidth)
  .container
    width 540px

+media-query(only screen, min-width $bigWidth)
  .container
    width 900px
  .label 
    &.general
      font-size 14px
      line-height 12px
    &.numbers
      font-size 36px
      line-height 54px
    &.link
      font-size 14px
      line-height 17px
    &.code
      font-size 24px
      line-height 65px
    &.head
      font-size 14px
      line-height 17px
      