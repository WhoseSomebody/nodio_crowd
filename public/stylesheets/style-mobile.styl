+media-query(all, max-width 600px)
  .desktop,
  .tablet
    display none
  .mobile 
    display block
  .container
    width 301px
  // .logo
  //   width 323px
  //   height 58px
  //   margin 32px auto 0 auto
  #logo
    margin-left -59px
  .total
    margin 11px 0 22px 0
    .label
      &.head
        font-size 14px
        font-weight 700
        line-height 36px
      &.numbers
        font-size: 26px;
        line-height: 20px;
        letter-spacing: 1px;
        
  .pass-phrase
    height: 181px;
    position: relative;
    box-sizing: border-box;
    padding 12px 5px
    .password
      line-height: 30px;
      font-size: 18px;
      letter-spacing: 1.5px;
      width: 100%;

  #arrow-left,
  #arrow-right
    margin-top 6px !important
      
    .show
      position: absolute;
      bottom: 27px;
      right: 27px;
    .hidden
        display none 
  .signin,
  .signup
    position relative
  .signin
    max-width 239px
    margin 29px 30px
    position relative
  .signup
    margin-top 59px
  .hidden
    display none !important  
  .progress
    // margin: 18px auto;
    width: 301px;
    height: 12px;
    margin 18px 0px
    & > *
      width initial
      float left
      position absolute
      margin: 19px 0 0px -107px !important;

  .attention
    width 300px
    font-size 10px
    line-height 18px
    text-align center
    letter-spacing 0.7px
    margin 12px auto
    color rgba(255,255,255,0.3)
    .bolded
      font-weight 600
      font-size 18px
      color #ff004d
      

  .bars
    width 300px
    // min-width 300px
    margin 30px 0 0 0 
    .bar-item
      position relative
      width: 100px
      padding 0
      margin 0
      text-align center
      text-align -webkit-center
      & > *
        margin 0 auto
      &.active
        color white
        .line
          margin -1px 0px -1px -10px



  .wal
    height initial
    .top-part
      height initial
      height 180px
      .left-part,
      .right-part
        display block
        width initial
        float none
        margin 0
      .left-part
        padding-bottom 23px 
        .numbers
          line-height 38px
      .right-part
        padding-bottom 29px 
        .numbers
          line-height 39px
          
    .bottom-part
      height initial
      padding-top 29px
      .left-part
      .right-part
        display block
        width initial
        float none
        margin 0
        .qr
          float none
          margin 0px 30px
      .left-part
        width 241px
        .label
          &.code
            font-size 18px
            padding 12px 0
            line-height 22px
            letter-spacing 1px
        .copy
          margin 10px 0 29px 0
      
  
  .history
    .hist-line
      .col
        &.confirm
          display none
        &.date
          width 35%
          .date-font
            font-size 15px
        &.amount
          width 52%
          .label.num
            font-size 15px
        &.details
          width 5%
          .detail-arrow
            margin -42px 0 0 -9px
  .footer
    margin -22px 0 28px 0
    padding-bottom 15px
    .copyright
      font-size 11px
      color rgba(255,255,255,0.3)
      margin 21px auto 0 auto


  #forw, #backw 
    z-index 1000
    position absolute
    margin 14px 0 0 -38px;
  #forw
    left 252px

  #backw
    // left: -37px;

  .step1 .text, .step2 .text
    margin-left 0
  .step2 .text
    margin-left 26px