block content
  .row.bars
    .bar-item
      a 
        .desktop.tablet
          | Reports
          .line
        .mobile
          .arrow.left
            a(href="#")#arrow-left
    .bar-item.active
      a General
      .line.desktop.tablet.mobile
    .bar-item
      a 
        .desktop.tablet
          | Updates
          .line
        .mobile
          .arrow.right
            a(href="#")#arrow-right
    //- p Welcome to #{title}
  .row.wal
    .point.bottom.left
    .point.bottom.right
    .point.top.left
    .point.top.right
    .wallet
      .top-part
        .left-part
          .label.general
            | Your stakeholder ID
          .label.numbers
            | #{userID}
          a(href="").label.link#logout
              | Log Out
        .right-part
          .label.general
            | Your investment
          .label.numbers#invest-amount
            | 1 000 001.789 BTC
          #nods-amount
            .label.info
              | âˆ½ 1 000 001 Nods
            .line
      .line(style="width: 100%;")
      .bottom-part
        .left-part
          .label.general
            | Wallet to put bitcoins
          .label.code#code
            | #{userWallet}
          .copy
            .point.bottom.left
            .point.bottom.right
            .point.top.left
            .point.top.right
            a(href="#")#walcop.label.button
              span.desktop
                | Copy wallet number to clipboard
              span.mobile.tablet
                | Copy number
        .right-part
          .qr
            .point.bottom.left
            .point.bottom.right
            .point.top.left
            .point.top.right
            img(src="https://api.qrserver.com/v1/create-qr-code/?size=117x117&data=bitcoin:#{userWallet}")
