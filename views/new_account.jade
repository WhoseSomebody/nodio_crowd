    //-   -o-transition: visibility 1s, opacity 1.5s linear;
    //-   transition: visibility 1s, opacity 1.5s linear;
    //- }
    .group2 {
      display: none !important
    }
    .invisible2{
    opacity: 0;
    cursor: default;
    }
    #login_new{
      margin-top:59px
    }
    @media (max-width: 600px){
      .second {
            margin-top: -60px;
      }
    }