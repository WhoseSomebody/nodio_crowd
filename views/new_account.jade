extends layout

block content
  .row
    .progress
      .first
        .step1
          .number.invisible1
            | 01
          .text.invisible1
            | Generate & Copy Pass Phrase
        .desktop.tablet    
          svg.active.invisible1
            use(xmlns:xlink='http://www.w3.org/1999/xlink', xlink:href='#pagination-active')  
          .line.active

      .second
        .step2
          .number.invisible2
            | 02
          .text.invisible2
            | Enter Your Pass Phrase
        .desktop.tablet
          svg.active.invisible2
            use(xmlns:xlink='http://www.w3.org/1999/xlink', xlink:href='#pagination-active')
          .line#right
  #generator.group1
    #formspace1.pass-phrase
      .point.bottom.left
      .point.bottom.right
      .point.top.left
      .point.top.right
      .generate.label(title="Generate New Phrase") gen
      textarea.password(
        type="text",
        maxlength="69",
        placeholder="Generate Your Pass Phrase",
        value="one fish empty night purse siren fancy dutch always hold effort father"
        style="")
      .save-to-file.label(title="Save As *.txt")  dwnl

  #login_new.group2
    #formspace_new.pass-phrase
      .point.bottom.left
      .point.bottom.right
      .point.top.left
      .point.top.right
      .paste.label Paste
      textarea.password(
        type="password",
        maxlength="69",
        placeholder="Enter Your Pass Phrase",
        style="")
      label.file.label Use txt
        input(
          type="file",
          onchange="onFileSelected(event, this)"
          )
      #show.show.label.hidden Show

  .terms
    |By creating an account, I agree to the 
    a(href="#")
      | Terms Of Crowdsale Offer
    |.

  .attention
    | It's highly important to
    br
    span.bolded
      |  keep your passphrase memorized.
      br
    |  Note, that you won't be able to restore your account without it.
    |  and all your data will be permanently lost.

  #copy.signin.group1
    .point.bottom.left
    .point.bottom.right
    .point.top.left
    .point.top.right
    a(href="#").label.button
      span.desktop.tablet
        | Copy Pass Phrase to Clipboard 
      span.mobile
        | Copy 
  #new.signin.disabled.group2
    .point.bottom.left
    .point.bottom.right
    .point.top.left
    .point.top.right
    a(href="#").label.button
      span.desktop.tablet
        | Sign In As A New StakeHolder
      span.mobile
        | Sign In 

